{% extends 'base.html.twig' %}

{% block title %}{{ course.name}}/study_on {% endblock %}

{% block body %}
    <h1>Course</h1>

    {{ course.name }}
    <br>
    {{ course.description }}
    <br><br>


    <table class="table">
        <tbody>
            <tr>
                <td>
                    Lessons
                </td>
            </tr>
            {% for lesson in course.lessons|sort((a, b) => a.nindex <=> b.nindex) %}
                <tr>
                    <td>
                        <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_index') }}">back to list</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    <a href="{{ path('app_lesson_new', {'id': course.id})  }}">add lesson</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
