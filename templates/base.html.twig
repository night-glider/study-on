<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <ul class="nav nav-pills align-items-center">
            {% if app.user %}
                <li class="nav-item" style="margin-right: 10px;">
                    <h4 class="m-md-0"> Твой email: {{ app.user.email }} </h4>
                </li>
                <li class="nav-item"><a href="{{ path('app_profile') }}" class="btn btn-primary">
                        Личный кабинет
                    </a></li>
                <li class="nav-item"><a href="{{ path('app_logout') }}" class="btn btn-outline-primary ms-2">
                        Выход
                    </a></li>
            {% else %}
                <li class="nav-item"><a href="{{ path('app_login') }}" class="btn btn-primary">
                        Войти
                    </a></li>
                <li class="nav-item"><a href="{{ path('app_register') }}" class="btn btn-outline-primary ms-2">
                        Регистрация
                    </a></li>
            {% endif %}

        </ul>
        {% block body %}{% endblock %}
    </body>
</html>
